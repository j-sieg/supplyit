<section class="mx-auto col-md-6 table-responsive shadow-lg rounded mt-4 p-2">
  <h1 class="text-center">Orders</h1>
  <div class="table-responsive">
    <table id='orders-table' class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Order #</th>
          <th scope="col">Date</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.each do |order| %>
          <tr id="<%= dom_id(order) %>">
            <td><%= link_to "Order##{order.id}", sellers_order_path(order) %></td>
            <td><%= formatted_time(order.created_at) %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
