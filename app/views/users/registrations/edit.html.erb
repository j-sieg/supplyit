<section class='col-lg-8 mx-auto p-4 shadow mb-5 bg-body rounded mt-4'>
  <h2>My Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: { method: :put, class: "row", data: {turbo: "false"} }) do |f| %>

    <div class="col-lg-6">
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= field_error(resource, :email) %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <%= field_error(resource, :password) %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <%= field_error(resource, :password_confirmation) %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        <%= field_error(resource, :current_password) %>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="mb-3">
        <%= f.label :full_name, class: "form-label" %>
        <%= f.text_field :full_name, class: "form-control" %>
        <%= field_error(resource, :full_name) %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.number_field :phone_number, class: "form-control" %>
        <%= field_error(resource, :phone_number) %>
      </div>

      <div class="mb-3">
        <%= f.label :birthday, class: "form-label" %>
        <%= f.date_field :birthday, class: "form-control" %>
        <%= field_error(resource, :birthday) %>
      </div>

      <div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_area :address, class: "form-control" %>
        <%= field_error(resource, :address) %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <div class="mt-4 bg-danger p-2 text-white rounded">
    <h3>Cancel my account</h3>
    <p>Unhappy?
      <%= button_to "Cancel my account", registration_path(resource_name),
        data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-dark" %>
    </p>
  </div>
</section>
